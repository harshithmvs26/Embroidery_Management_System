<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Production Reports - Employee Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/employee/dashboard">Garments Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/employee/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employee/orders">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/employee/reports">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employee/machines">Machines</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employee/inventory">Inventory</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>Production Reports</h2>
        <% if (reports && reports.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Report ID</th>
                            <th>Order ID</th>
                            <th>Machine</th>
                            <th>Quantity Produced</th>
                            <th>Report Date</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reports.forEach(report => { %>
                            <tr>
                                <td><%= report.report_id %></td>
                                <td><%= report.order_id %></td>
                                <td><%= report.machine_name %></td>
                                <td><%= report.quantity_produced %></td>
                                <td><%= new Date(report.report_date).toLocaleDateString() %></td>
                                <td><%= report.notes %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                No production reports found.
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 